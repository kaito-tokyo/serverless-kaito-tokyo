---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  ogp_image?: string;
  ogp_url?: string;
}

const { title, description, ogp_image, ogp_url } = Astro.props;
---

<!doctype html>
<html lang="ja-JP">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    {ogp_image && <meta property="og:image" content={ogp_image} />}
    {ogp_url && <meta property="og:url" content={ogp_url} />}
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/artwork">Artwork</a>
        <a href="/novel">Novel</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>Authored by Kaito Udagawa</p>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  header {
    padding: 1rem;
    border-bottom: 1px solid #ccc;
  }

  nav {
    display: flex;
    gap: 1rem;
  }

  footer {
    padding: 1rem;
    border-top: 1px solid #ccc;
    text-align: center;
  }
</style>
